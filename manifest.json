{
  "manifest_version": 3,
  "name": "Get YouTube preview",
  "version": "1.0",
  "description": "Get full-size preview from youtube",
  "permissions": [
    "tabs",
    "activeTab"
],
  "icons": {
      "128": "icon.png"
  },
  "content_scripts": [
      {
          "matches": [ "https://www.youtube.com/watch*" ],
          "js": [ "app.js" ]
      }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}